@model BankAccountSearchModel

@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Satyanam.Plugin.Misc.AccountManagement.Admin.BankAccount.List").Text;
    NopHtml.SetActiveMenuItemSystemName("Satyanam.Plugin.Misc.AccountManagement.Admin.BankAccounts");
}

<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Satyanam.Plugin.Misc.AccountManagement.Admin.BankAccount.List")
    </h1>
    @if (await permissionService.AuthorizeAsync(AccountManagementPermissionProvider.ManageBankAccounts, PermissionAction.Add))
    {
        <div class="float-right">
            <a asp-action="BankAccountCreate" asp-controller="AccountManagement" class="btn btn-primary">
                <i class="fas fa-plus-square"></i>
                @T("Admin.Common.AddNew")
            </a>
        </div>
    }
</div>
<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                <div class="card card-default">
                    <div class="card-body">
                        @{
                            var gridModel = new DataTablesModel
                            {
                                Name = "bank-accounts-grid",
                                UrlRead = new DataUrl("BankAccounts", "AccountManagement", null),
                                UrlDelete = new DataUrl("BankAccountDelete", "AccountManagement", null),
                                SearchButtonId = "search-bank-accounts",
                                Length = Model.PageSize,
                                LengthMenu = Model.AvailablePageSizes,
                                Filters = new List<FilterParameter>
                                {
                                },
                            };

                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(BankAccountModel.Title))
                            {
                                Title = T("Satyanam.Plugin.Misc.AccountManagement.Admin.BankAccount.Fields.Title").Text
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(BankAccountModel.BankName))
                            {
                                Title = T("Satyanam.Plugin.Misc.AccountManagement.Admin.BankAccount.Fields.BankName").Text
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(BankAccountModel.IsDefault))
                            {
                                Title = T("Satyanam.Plugin.Misc.AccountManagement.Admin.BankAccount.Fields.IsDefault").Text,
                                ClassName = NopColumnClassDefaults.CenterAll,
                                Render = new RenderBoolean()
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(BankAccountModel.IsActive))
                            {
                                Title = T("Satyanam.Plugin.Misc.AccountManagement.Admin.BankAccount.Fields.IsActive").Text,
                                ClassName = NopColumnClassDefaults.CenterAll,
                                Render = new RenderBoolean()
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(BankAccountModel.DisplayOrder))
                            {
                                Title = T("Satyanam.Plugin.Misc.AccountManagement.Admin.BankAccount.Fields.DisplayOrder").Text,
                                ClassName = NopColumnClassDefaults.CenterAll
                            });
                            @if (await permissionService.AuthorizeAsync(AccountManagementPermissionProvider.ManageBankAccounts, PermissionAction.Edit))
                            {
                                gridModel.ColumnCollection.Add(new ColumnProperty(nameof(BankAccountModel.Id))
                                {
                                    Title = T("Admin.Common.Edit").Text,
                                    Width = "100",
                                    ClassName = NopColumnClassDefaults.Button,
                                    Render = new RenderButtonEdit(new DataUrl("~/Admin/AccountManagement/BankAccountEdit/"))
                                });
                            }
                            @if (await permissionService.AuthorizeAsync(AccountManagementPermissionProvider.ManageBankAccounts, PermissionAction.Delete))
                            {
                                gridModel.ColumnCollection.Add(new ColumnProperty(nameof(BankAccountModel.Id))
                                {
                                    Title = T("Admin.Common.Delete").Text,
                                    Width = "100",
                                    Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                                    ClassName = NopColumnClassDefaults.Button
                                });
                            }
                        }
                        @await Html.PartialAsync("Table", gridModel)
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>