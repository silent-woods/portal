@model InvoiceItemModel

@{
    Layout = "_AdminPopupLayout";
    ViewBag.PageTitle = T("Satyanam.Plugin.Misc.AccountManagement.Admin.InvoiceItem.EditInvoiceItem").Text;
}

<form asp-controller="AccountManagement" asp-action="InvoiceItemEditPopup"
      asp-route-btnId="@Context.Request.Query["btnId"]"
      asp-route-formId="@Context.Request.Query["formId"]">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Satyanam.Plugin.Misc.AccountManagement.Admin.InvoiceItem.EditInvoiceItem")
        </h1>
        @if (await permissionService.AuthorizeAsync(AccountManagementPermissionProvider.ManageInvoiceItems, PermissionAction.Edit))
        {
            <div class="float-right">
                <button type="submit" name="save" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.Save")
                </button>
            </div>
        }
    </div>
    @await Html.PartialAsync("_CreateOrUpdateInvoiceItem", Model)
</form>