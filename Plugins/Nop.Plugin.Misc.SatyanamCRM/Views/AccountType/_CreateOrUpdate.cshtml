@using Satyanam.Nop.Plugin.SatyanamCRM.Models.AccountTypes
@model AccountTypeModel

@{
    const string hideInfoBlockAttributeName = "accountTypeDetails.HideInfoBlock";
    var customer = await workContext.GetCurrentCustomerAsync();
    var hideInfoBlock = await genericAttributeService.GetAttributeAsync<bool>(customer, hideInfoBlockAttributeName);

}

@* <div asp-validation-summary="All"></div> *@
<input asp-for="Id" type="hidden" />

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            
            <nop-cards id="accountType-item-cards">
                <nop-card asp-name="accountType-item-info" asp-icon="fas fa-info" asp-title="@T("Plugin.SatyanamCRM.AccountType.Info")" asp-hide-block-attribute-name="@hideInfoBlockAttributeName" asp-hide="@hideInfoBlock">@await Html.PartialAsync("~/Plugins/Misc.SatyanamCRM/Views/AccountType/_CreateOrUpdate.Info.cshtml", Model)</nop-card>
            </nop-cards>
        </div>
    </div>
</section>