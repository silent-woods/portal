@using Satyanam.Nop.Plugin.SatyanamCRM.Models
@{
    Layout = "_ConfigurePlugin";
    NopHtml.SetActiveMenuItemSystemName("nopCommerce Web API plugin");
}
@model SatyanamCRMSettingsModel

<form asp-controller="SatyanamCRM" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">Campaign Email Settings</h1>
        <div class="float-right">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save
            </button>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="form-group row">
                <div class="col-md-3">
                    <nop-label asp-for="LinkedInUrl" />
                </div>
                <div class="col-md-6">
                    <nop-editor asp-for="LinkedInUrl" asp-required="true" />
                    <span asp-validation-for="LinkedInUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <nop-label asp-for="WebsiteUrl" />
                </div>
                <div class="col-md-6">
                    <nop-editor asp-for="WebsiteUrl" asp-required="true" />
                    <span asp-validation-for="WebsiteUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <nop-label asp-for="FooterText" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="FooterText" asp-template="RichEditor" />
                    <span asp-validation-for="FooterText" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <nop-label asp-for="APIKey" />
                </div>
                <div class="col-md-6">
                    <nop-editor asp-for="APIKey"/>
                    <span asp-validation-for="APIKey" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <nop-label asp-for="APISecret" />
                </div>
                <div class="col-md-6">
                    <nop-editor asp-for="APISecret" />
                    <span asp-validation-for="APISecret" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <nop-label asp-for="AllowedDomains" />
                </div>
                <div class="col-md-6">
                    <nop-editor asp-for="AllowedDomains" />
                    <span asp-validation-for="AllowedDomains" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    <nop-label asp-for="InquiryEmailSendTo" />
                </div>
                <div class="col-md-6">
                    <nop-editor asp-for="InquiryEmailSendTo" />
                    <span asp-validation-for="InquiryEmailSendTo" class="text-danger"></span>
                </div>
            </div>
        </div>
     </div>
</form>