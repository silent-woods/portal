@using Satyanam.Nop.Plugin.SatyanamCRM.Models.Deals
@model DealsModel

<input type="hidden" asp-for="CompanyId" />

<div class="card-body">
    @if (Model.Id > 0)
    {
        <div class="card card-default">
            <div class="card-body">
                @{
                    var gridModel = new DataTablesModel
                    {
                        Name = "dealscompany-grid",
                        UrlRead = new DataUrl("DealsCompany", "Deals", new RouteValueDictionary { [nameof(Model.DealsCompanySearchModel.CompanyId)] = Model.CompanyId }),
                        UrlDelete = new DataUrl("DealsCompanyDelete", "Deals", new RouteValueDictionary { [nameof(Model.Id)] = Model.DealsCompanyModels.FirstOrDefault()?.Id }),
                        Length = Model.DealsCompanySearchModel.PageSize,
                        LengthMenu = Model.DealsCompanySearchModel.AvailablePageSizes
                    };

                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(DealsCompanyModel.CompanyName))
                    {
                        Title = T("Plugin.SatyanamCRM.Company.Fields.CompanyName").Text,
                        Width = "100"
                    });
                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(DealsCompanyModel.WebsiteUrl))
                    {
                        Title = T("Plugin.SatyanamCRM.Company.Fields.WebsiteUrl").Text,
                        Width = "100"
                    });
                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(DealsCompanyModel.CreatedOnUtc))
                    {
                        Title = T("Plugin.SatyanamCRM.Company.Fields.CreatedOn").Text,
                        Width = "100",
                        Render = new RenderDate()
                    });
                    @if (await permissionService.AuthorizeAsync(SatyanamPermissionProvider.ManageDealCompanies, PermissionAction.Edit))
                    {
                        gridModel.ColumnCollection.Add(new ColumnProperty(nameof(DealsCompanyModel.Id))
                        {
                            Title = T("Admin.Common.Edit").Text,
                            Width = "100",
                            ClassName = NopColumnClassDefaults.Button,
                            Render = new RenderButtonEdit(new DataUrl("~/Admin/Deals/DealsCompanyEdit?companyId=" + Model.Id + "&id=" + Model.DealsCompanyModels.FirstOrDefault()?.Id, true))
                        });
                    }
                    @if (await permissionService.AuthorizeAsync(SatyanamPermissionProvider.ManageDealCompanies, PermissionAction.Delete))
                    {
                        gridModel.ColumnCollection.Add(new ColumnProperty(nameof(DealsCompanyModel.Id))
                        {
                            Title = T("Admin.Common.Delete").Text,
                            Width = "100",
                            Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                            ClassName = NopColumnClassDefaults.Button
                        });
                    }
                }
                @await Html.PartialAsync("Table", gridModel)
            </div>
            
        </div>
    }
    else
    {
        <div class="card card-default">
            <div class="card-body">
                Please save the company before viewing associated deals.
            </div>
        </div>
    }
</div>
