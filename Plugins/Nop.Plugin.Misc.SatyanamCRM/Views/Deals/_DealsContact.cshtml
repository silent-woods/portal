@using Satyanam.Nop.Plugin.SatyanamCRM.Models.Deals
@model DealsModel

<input type="hidden" asp-for="ContactId" />

<div class="card-body">
    @if (Model.Id > 0)
    {
        <div class="card card-default">
            <div class="card-body">
                @{
                    var gridModel = new DataTablesModel
                    {
                        Name = "dealscontacts-grid",
                        UrlRead = new DataUrl("DealsContact", "Deals", new RouteValueDictionary { [nameof(Model.DealsContactSearchModel.ContactId)] = Model.ContactId }),
                        UrlDelete = new DataUrl("DealsContactDelete", "Deals", new RouteValueDictionary { [nameof(Model.Id)] = Model.DealsContactModels.FirstOrDefault()?.Id }),
                        Length = Model.DealsContactSearchModel.PageSize,
                        LengthMenu = Model.DealsContactSearchModel.AvailablePageSizes
                    };

                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(DealsContactModel.Id))
                    {
                        IsMasterCheckBox = true,
                        Render = new RenderCheckBox("checkbox_deal_contacts"),
                        ClassName = NopColumnClassDefaults.CenterAll,
                        Width = "50"
                    });

                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(DealsContactModel.Name))
                    {
                        Title = T("Plugin.SatyanamCRM.Contacts.Fields.Name").Text,
                        Width = "100"
                    });
                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(DealsContactModel.CompanyName))
                    {
                        Title = T("Plugin.SatyanamCRM.Contacts.Fields.CompanyName").Text,
                        Width = "100"
                    });
                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(DealsContactModel.WebsiteUrl))
                    {
                        Title = T("Plugin.SatyanamCRM.Contacts.Fields.WebsiteUrl").Text,
                        Width = "100"
                    });
                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(DealsContactModel.CreatedOnUtc))
                    {
                        Title = T("Plugin.SatyanamCRM.Contacts.Fields.CreatedOnUtc").Text,
                        Width = "100",
                        Render = new RenderDate()
                    });
                    @if (await permissionService.AuthorizeAsync(SatyanamPermissionProvider.ManageDealContacts, PermissionAction.Edit))
                    {
                        gridModel.ColumnCollection.Add(new ColumnProperty(nameof(DealsContactModel.Id))
                        {
                            Title = T("Admin.Common.Edit").Text,
                            Width = "100",
                            ClassName = NopColumnClassDefaults.Button,
                            Render = new RenderButtonEdit(new DataUrl("~/Admin/Deals/DealsContactEdit?contactsId=" + Model.Id + "&id=" + Model.DealsContactModels.FirstOrDefault()?.Id, true))
                        });
                    }
                    @if (await permissionService.AuthorizeAsync(SatyanamPermissionProvider.ManageDealContacts, PermissionAction.Delete))
                    {
                        gridModel.ColumnCollection.Add(new ColumnProperty(nameof(DealsContactModel.Id))
                        {
                            Title = T("Admin.Common.Delete").Text,
                            Width = "100",
                            Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                            ClassName = NopColumnClassDefaults.Button
                        });
                    }
                }
                @await Html.PartialAsync("Table", gridModel)
            </div>
        </div>
    }
    else
    {
        <div class="card card-default">
            <div class="card-body">
                Please save the contact before viewing associated deals.
            </div>
        </div>
    }
</div>
