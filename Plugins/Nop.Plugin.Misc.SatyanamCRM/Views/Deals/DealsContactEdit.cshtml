@using Satyanam.Nop.Plugin.SatyanamCRM.Models.Deals
@model DealsContactModel
@{
    Layout = "_AdminLayout";
}
@{
    //page title
    ViewBag.PageTitle = T("Plugin.SatyanamCRM.Contacts.EditContactsDetails").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Contacts");
}

<form asp-controller="Deals" asp-action="DealsContactEdit" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Plugin.SatyanamCRM.Contacts.EditContactsDetails")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-controller="Deals" asp-action="Edit" asp-route-id="@Model.Id">@T("Admin.Deals.BackToList")</a>
            </small>
        </h1>
        @if (await permissionService.AuthorizeAsync(SatyanamPermissionProvider.ManageDealContacts, PermissionAction.Edit))
        {
            <div class="float-right">
                <button type="submit" name="save" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.Save")
                </button>
                <button type="submit" name="save-continue" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.SaveContinue")
                </button>
            </div>
        }
    </div>
    @await Html.PartialAsync("~/Plugins/Misc.SatyanamCRM/Views/Deals/_DealsContactMapping.cshtml", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="Address-delete" />


