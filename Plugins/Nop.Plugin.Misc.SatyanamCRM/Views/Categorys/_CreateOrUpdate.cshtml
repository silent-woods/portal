@using Satyanam.Nop.Plugin.SatyanamCRM.Models.Categorys
@model CategorysModel

@{
    const string hideInfoBlockAttributeName = "categorysDetails.HideInfoBlock";
    var customer = await workContext.GetCurrentCustomerAsync();
    var hideInfoBlock = await genericAttributeService.GetAttributeAsync<bool>(customer, hideInfoBlockAttributeName);

}

<input asp-for="Id" type="hidden" />

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            
            <nop-cards id="categorys-item-cards">
                <nop-card asp-name="categorys-item-info" asp-icon="fas fa-info" asp-title="@T("Plugin.SatyanamCRM.Categorys.Info")" asp-hide-block-attribute-name="@hideInfoBlockAttributeName" asp-hide="@hideInfoBlock">@await Html.PartialAsync("~/Plugins/Misc.SatyanamCRM/Views/Categorys/_CreateOrUpdate.Info.cshtml", Model)</nop-card>
            </nop-cards>
        </div>
    </div>
</section>