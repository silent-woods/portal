@using Satyanam.Nop.Plugin.SatyanamCRM.Models.Company
@model CompanyModel

<input type="hidden" asp-for="Id" />

<div class="card-body">
    @if (Model.Id > 0)
    {
        <div class="card card-default">
            <div class="card-body">
                @{
                    var gridModel = new DataTablesModel
                    {
                        Name = "companydeals-grid",
                        UrlRead = new DataUrl("CompanyDeals", "Company", new RouteValueDictionary { [nameof(Model.companyDealsSearchModel.CompanyId)] = Model.Id }),
                        UrlDelete = new DataUrl("CompanyDealsDelete", "Company", new RouteValueDictionary { [nameof(Model.Id)] = Model.companyDealsModels.FirstOrDefault()?.Id }),
                        Length = Model.companyDealsSearchModel.PageSize,
                        LengthMenu = Model.companyDealsSearchModel.AvailablePageSizes,
                    };

                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(CompanyDealsModel.DealName))
                    {
                        Title = T("Admin.Address.Fields.DealName").Text
                    });
                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(CompanyDealsModel.Amount))
                    {
                        Title = T("Admin.Address.Fields.Amount").Text
                    });
                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(CompanyDealsModel.Stage))
                    {
                        Title = T("Admin.Address.Fields.Stage").Text
                    });
                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(CompanyDealsModel.Probability))
                    {
                        Title = T("Admin.Address.Fields.Probability").Text
                    });
                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(CompanyDealsModel.Date))
                    {
                        Title = T("Admin.Address.Fields.ClosingDate").Text
                    });
                    @if (await permissionService.AuthorizeAsync(SatyanamPermissionProvider.ManageCompanyDeals, PermissionAction.Edit))
                    {
                        gridModel.ColumnCollection.Add(new ColumnProperty(nameof(CompanyModel.Id))
                        {
                            Title = T("Admin.Common.Edit").Text,
                            Width = "100",
                            ClassName = NopColumnClassDefaults.Button,
                            Render = new RenderButtonEdit(new DataUrl("~/Admin/Company/CompanyDealsEdit?companyId=" + Model.Id + "&id=" + Model.companyDealsModels.FirstOrDefault()?.Id, true))
                        });
                    }
                    @if (await permissionService.AuthorizeAsync(SatyanamPermissionProvider.ManageCompanyDeals, PermissionAction.Delete))
                    {
                        gridModel.ColumnCollection.Add(new ColumnProperty(nameof(CompanyModel.Id))
                        {
                            Title = T("Admin.Common.Delete").Text,
                            Width = "100",
                            Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                            ClassName = NopColumnClassDefaults.Button
                        });
                    }
                }
                @await Html.PartialAsync("Table", gridModel)
            </div>

            @if (await permissionService.AuthorizeAsync(SatyanamPermissionProvider.ManageCompanyDeals, PermissionAction.Add))
            {
                <div class="card-body">
                    <button type="button" class="btn btn-primary" onclick="location.href = '@Url.Action("CompanyDealsCreate", new { companyId = Model.Id })'">
                        <i class="fas fa-plus-square"></i>
                        @T("Admin.Company.Deals.AddButton")
                    </button>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card card-default">
            <div class="card-body">
                Please save the company before viewing associated deals.
            </div>
        </div>
    }
</div>
