                                    <nop-label asp-for="SwitchTaskDuration" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="SwitchTaskDuration" />
                                    <span asp-validation-for="SwitchTaskDuration"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="EnableLogging" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="EnableLogging" />
                                    <span asp-validation-for="EnableLogging"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="ClientId" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="ClientId" />
                                    <span asp-validation-for="ClientId"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="ClientSecret" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="ClientSecret" />
                                    <span asp-validation-for="ClientSecret"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="TenantId" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="TenantId" />
                                    <span asp-validation-for="TenantId"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="UserId" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="UserId" />
                                    <span asp-validation-for="UserId"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="UploadTimeTrackerId" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="UploadTimeTrackerId" />
                                    <span asp-validation-for="UploadTimeTrackerId"></span>
                                </div>
                            </div>
                        </div>
                    </nop-card>
                </nop-cards>
            </div>
        </div>
    </section>
</form>