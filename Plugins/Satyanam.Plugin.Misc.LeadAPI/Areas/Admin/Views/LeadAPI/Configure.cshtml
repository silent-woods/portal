@model ConfigurationModel

@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Satyanam.Plugin.Misc.LeadAPI.Admin.Configuration").Text;
    NopHtml.SetActiveMenuItemSystemName("Satyanam.Plugin.Misc.LeadAPI.Admin.Configuration");

    const string hidePluginConfigurationBlockAttributeName = "AbandonedCartPluginConfigurationPage.HideAbandonedCartPluginConfigurationBlock";
    var hidePluginConfigurationBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hidePluginConfigurationBlockAttributeName);
}

<form asp-controller="LeadAPI" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Satyanam.Plugin.Misc.LeadAPI.Admin.Configuration") - @T("Satyanam.Plugin.Misc.LeadAPI.MainMenu.Title")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List" asp-controller="Plugin">@T("Admin.Configuration.Plugins.Misc.BackToList")</a>
            </small>
        </h1>
        @if (await permissionService.AuthorizeAsync(LeadAPIPermissionProvider.ManageLeadAPIConfiguration, PermissionAction.Edit))
        {
            <div class="float-right">
                <button type="submit" name="save" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.Save")
                </button>
            </div>
        }
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <nop-cards id="configure-cards">
                    <nop-card asp-name="configure-card" asp-icon="fas fa-cogs" asp-title="@T("Satyanam.Plugin.Misc.LeadAPI.Admin.Configuration")" asp-hide-block-attribute-name="@hidePluginConfigurationBlockAttributeName" asp-hide="@hidePluginConfigurationBlock" asp-advanced="false">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="APIKey" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="APIKey" />
                                    <span asp-validation-for="APIKey"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="APISecretKey" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="APISecretKey" />
                                    <span asp-validation-for="APISecretKey"></span>
                                </div>
                            </div>
                        </div>
                    </nop-card>
                </nop-cards>
            </div>
        </div>
    </section>
</form>