@model App.Web.Areas.Admin.InterviewQeations.Models.RecruitementModel
@{
    const string hideInfoBlockAttributeName = "QeationsDetails.HideInfoBlock";
    var customer = await workContext.GetCurrentCustomerAsync();
    var hideInfoBlock = await genericAttributeService.GetAttributeAsync<bool>(customer, hideInfoBlockAttributeName);

}


<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">

            <nop-cards id="Qeations-item-cards">
                <nop-card asp-name="Qeations-item-info" asp-icon="fas fa-info" asp-title="@T("Admin.Questions.Info")" asp-hide-block-attribute-name="@hideInfoBlockAttributeName" asp-hide="@hideInfoBlock">@await Html.PartialAsync("/Areas/Admin/Views/Extension/InterviewQeations/_CreateOrUpdate.Info.cshtml", Model)</nop-card>
            </nop-cards>
        </div>
    </div>
</section>