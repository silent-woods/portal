@using App.Web.Areas.Admin.Models.Extension.Announcements

@model AnnouncementModel

<div class="card-body">
    <div class="row">
        <div class="col-md-6">
            <h6><i class="fas fa-thumbs-up"></i> Liked Employees</h6>
            @if (Model.LikedEmployees.Any())
            {
                <ul class="list-unstyled">
                    @foreach (var emp in Model.LikedEmployees)
                    {
                        <li><i class="fas fa-user"></i> @emp.FirstName @emp.LastName</li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">No likes yet.</p>
            }
        </div>
        <div class="col-md-6">
            <h6><i class="fas fa-user-clock"></i> Remaining Employees</h6>
            @if (Model.RemainingEmployees.Any())
            {
                <ul class="list-unstyled">
                    @foreach (var emp in Model.RemainingEmployees)
                    {
                        <li><i class="fas fa-user"></i> @emp.FirstName @emp.LastName</li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">Everyone has liked this announcement</p>
            }
        </div>
    </div>
</div>
