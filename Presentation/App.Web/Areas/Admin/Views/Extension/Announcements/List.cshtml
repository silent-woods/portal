@using App.Web.Areas.Admin.Models.Extension.Announcements
@model AnnouncementSearchModel
@{
    // page title
    ViewBag.PageTitle = T("Admin.Configuration.Announcement").Text;
    // active menu item
    NopHtml.SetActiveMenuItemSystemName("Announcement");

    const string hideSearchBlockAttributeName = "Announcement.HideSearchBlock";
    var hideSearchBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideSearchBlockAttributeName);
}

<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Admin.Configuration.Announcement")
    </h1>
    <div class="float-right">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-square"></i>
            @T("Admin.Common.AddNew")
        </a>

        <button type="button" id="delete-selected" class="btn btn-danger">
            <i class="far fa-trash-alt"></i>
            @T("Admin.Common.Delete.Selected")
        </button>
        <nop-action-confirmation asp-button-id="delete-selected" />
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">

                <!-- Search -->
                <div class="card card-default card-search">
                    <div class="card-body">
                        <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                            <div class="search-text">@T("Admin.Common.Search")</div>
                            <div class="icon-search"><i class="fas fa-search"></i></div>
                            <div class="icon-collapse"><i class="far fa-angle-@(!hideSearchBlock ? "up" : "down")"></i></div>
                        </div>

                        <div class="search-body @(hideSearchBlock ? "closed" : "")">
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SearchTitle" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="SearchTitle" />
                                        </div>
                                    </div>
                                </div>

                               
                            </div>

                            <div class="row">
                                <div class="text-center col-12">
                                    <button type="button" id="search-announcements" class="btn btn-primary btn-search">
                                        <i class="fas fa-search"></i>
                                        @T("Admin.Common.Search")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Grid -->
                <div class="card card-default">
                    <div class="card-body">
                        @await Html.PartialAsync("Table", new DataTablesModel
                        {
                            Name = "announcement-grid",
                                                UrlRead = new DataUrl("List", "Announcement", null),
                                                SearchButtonId = "search-announcements",
                                                Length = Model.PageSize,
                                                LengthMenu = Model.AvailablePageSizes,
                                                Filters = new List<FilterParameter>
                                                {
                                                new FilterParameter(nameof(Model.SearchTitle)),
                                               
                                                },
                                                ColumnCollection = new List<ColumnProperty>
                                                {
                                                new ColumnProperty(nameof(AnnouncementModel.Id))
                                                {
                                                IsMasterCheckBox = true,
                                                Render = new RenderCheckBox("checkbox_announcements"),
                                                ClassName = NopColumnClassDefaults.CenterAll,
                                                Width = "30"
                                                },
                                                new ColumnProperty(nameof(AnnouncementModel.Title))
                                                {
                                                Title = T("Admin.Configuration.Announcement.Fields.Title").Text
                                                },
                                                new ColumnProperty(nameof(AnnouncementModel.AudienceTypeName))
                                                {
                                                Title = T("Admin.Configuration.Announcement.Fields.AudienceTypeName").Text
                                                },
                                                new ColumnProperty(nameof(AnnouncementModel.ReferenceName))
                                                {
                                                Title = T("Admin.Configuration.Announcement.Fields.Reference").Text
                                                },
                                                new ColumnProperty(nameof(AnnouncementModel.IsSent))
                                                {
                                                Title = T("Admin.Configuration.Announcement.Fields.IsPublished").Text,
                                                Width = "100",
                                                ClassName = NopColumnClassDefaults.CenterAll,
                                                Render = new RenderBoolean()
                                                },
                                                new ColumnProperty(nameof(AnnouncementModel.CreatedOnUtc))
                                                {
                                                Title = T("Admin.Configuration.Announcement.Fields.CreatedOnUtc").Text,
                                                Render = new RenderDate()
                                                },
                                                new ColumnProperty(nameof(AnnouncementModel.ScheduledOnUtc))
                                                {
                                                Title = T("Admin.Configuration.Announcement.Fields.ScheduledOnUtc").Text,
                                                Render = new RenderDate()
                                                },
                                                new ColumnProperty(nameof(AnnouncementModel.Id))
                                                {
                                                Title = T("Admin.Common.Edit").Text,
                                                Width = "80",
                                                ClassName = NopColumnClassDefaults.Button,
                                                Render = new RenderButtonEdit(new DataUrl("Edit"))
                                                }
                                                }
                                                })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $('#delete-selected-action-confirmation-submit-button').bind('click', function () {
            var postData = {
                selectedIds: selectedIds
            };
            addAntiForgeryToken(postData);
            $.ajax({
                cache: false,
                type: "POST",
                url: "@(Url.Action("DeleteSelected", "Announcement"))",
                data: postData,
                error: function (jqXHR, textStatus, errorThrown) {
                    showAlert('deleteSelectedFailed', errorThrown);
                },
                complete: function (jqXHR, textStatus) {
                    if (jqXHR.status === 204) {
                        showAlert('nothingSelectedAlert', '@T("Admin.Common.Alert.NothingSelected")');
                        return;
                    }
                    updateTable('#announcement-grid');
                }
            });
            $('#delete-selected-action-confirmation').modal('toggle');
            return false;
        });
    </script>

    <nop-alert asp-alert-id="deleteSelectedFailed" />
    <nop-alert asp-alert-id="nothingSelectedAlert" />
</section>
