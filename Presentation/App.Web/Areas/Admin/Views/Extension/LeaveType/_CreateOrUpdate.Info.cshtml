@model LeaveTypeModel
<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Type" />
        </div>
        <div class="col-md-4">
            <nop-editor asp-for="Type" asp-required="true" />
            <span asp-validation-for="Type"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Total_Allowed" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Total_Allowed" asp-required="true" />
            <span asp-validation-for="Total_Allowed"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Description" />
        </div>
        <div class="col-md-4">
            <nop-textarea asp-for="Description" />
            <span asp-validation-for="Description"></span>
        </div>
    </div>
</div>