@using App.Web.Areas.Admin.Models.ManageResumes;
@model CandiatesResumesModel
@{
    //page title
    ViewBag.PageTitle = T("Admin.Configuration.CandiatesResume.EditJobPostingDetails").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("CandiatesResumes");
}
<form asp-controller="CandiatesResumes" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Configuration.CandiatesResume.EditCandiatesResume")- @Model.LastName @Model.FirstName
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Configuration.CandiatesResume.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="JobPosting-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("/Areas/Admin/Views/Extension/ManageResume/_CreateOrUpdate.cshtml", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="JobPosting-delete" />