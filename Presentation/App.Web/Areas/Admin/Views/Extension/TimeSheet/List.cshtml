@model TimeSheetSearchModel
@{
    //page title
    ViewBag.PageTitle = T("Admin.Configuration.TimeSheet").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("TimeSheet");

    const string hideSearchBlockAttributeName = "TimeSheet.HideSearchBlock";
    var hideSearchBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideSearchBlockAttributeName);
}
<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Admin.Configuration.TimeSheet")
    </h1>
    <div class="float-right">
        @if (await permissionService.AuthorizeAsync(StandardPermissionProvider.ManageTimeSheet, PermissionAction.Add))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-square"></i>
                @T("Admin.Common.AddNew")
            </a>
        }
        @if (await permissionService.AuthorizeAsync(StandardPermissionProvider.ManageTimeSheet, PermissionAction.Delete))
        {
            <button type="button" id="delete-selected" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete.Selected")
            </button>
            <nop-action-confirmation asp-button-id="delete-selected" />
        }
    </div>

</div>
<form asp-controller="TimeSheet" asp-action="List" method="post">
<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                <div class="card card-default card-search">
                    <div class="card-body">
                        <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                            <div class="search-text">@T("Admin.Common.Search")</div>
                            <div class="icon-search"><i class="fas fa-search" aria-hidden="true"></i></div>
                            <div class="icon-collapse"><i class="far fa-angle-@(!hideSearchBlock ? "up" : "down")" aria-hidden="true"></i></div>
                        </div>

                        <div class="search-body @(hideSearchBlock ? "closed" : "")">
                            <div class="row">
                                <div class="col-md-6">

                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SelectedEmployeeIds" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-select asp-for="SelectedEmployeeIds" asp-items="Model.AvailableEmployees" asp-multiple="true" />
                                            <script>
                                                $(document).ready(function () {
                                                    var rolesIdsInput =
                                                        $('#@Html.IdFor(model => model.SelectedEmployeeIds)')
                                                            .data("kendoMultiSelect");
                                                    rolesIdsInput.setOptions({
                                                        autoClose: true,
                                                        filter: "contains"
                                                    });

                                                @if (Model.AvailableEmployees.Count == 0)
                                                {
                                                    <text>
                                                            rolesIdsInput.setOptions({
                                                                enable: false,
                                                                placeholder:
                                                                    '@T("Admin.Catalog.Products.CustomerRoles.NoCustomerRolesAvailable")'
                                                            });
                                                        rolesIdsInput._placeholder();
                                                        rolesIdsInput._enable();
                                                    </text>
                                                }
                                                                                            });
                                            </script>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SelectedProjectIds" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-select asp-for="SelectedProjectIds" asp-items="Model.AvailableProjects" asp-multiple="true" />
                                            <script>
                                                $(document).ready(function () {
                                                    var rolesIdsInput =
                                                        $('#@Html.IdFor(model => model.SelectedProjectIds)')
                                                            .data("kendoMultiSelect");
                                                    rolesIdsInput.setOptions({
                                                        autoClose: true,
                                                        filter: "contains"
                                                    });

                                                @if (Model.AvailableProjects.Count == 0)
                                                {
                                                    <text>
                                                            rolesIdsInput.setOptions({
                                                                enable: false,
                                                                placeholder:
                                                                    '@T("Admin.Catalog.Products.CustomerRoles.NoCustomerRolesAvailable")'
                                                            });
                                                        rolesIdsInput._placeholder();
                                                        rolesIdsInput._enable();
                                                    </text>
                                                }
                                                                                                                                            });
                                            </script>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="TaskName" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="TaskName" />
                                        </div>
                                    </div>
                                    </div>
                                <div class="col-md-6">

                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="BillableType" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-select asp-for="BillableType" asp-items="Model.AvailableBillableType" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-4">
                                                <nop-label asp-for="SearchPeriodId" />
                                            </div>
                                            <div class="col-sm-8">
                                                <nop-select asp-for="SearchPeriodId" asp-items="Model.PeriodList" />
                                                <span asp-validation-for="SearchPeriodId"></span>
                                            </div>
                                        </div>

                                        <div class="form-group row" style="display:none;" id="from-container">
                                        <div class="col-md-4">
                                            <nop-label asp-for="From" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="From" />
                                        </div>
                                    </div>
                                        <div class="form-group row" style="display:none;" id="to-container">
                                        <div class="col-md-4">
                                            <nop-label asp-for="To" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="To" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="text-center col-12">
                                    <button type="button" id="search-brands" class="btn btn-primary
                                         btn-search">
                                        <i class="fas fa-search"></i>
                                        @T("Admin.Common.Search")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                    <script>
                                                                function renderTaskLink(data, type, row, meta) {
                            if (!row.TaskId) return data || "";

                            return `
                                <div
                                    onclick="window.open('/ProjectTask/Edit?id=${row.TaskId}', '_blank')"
                                    style="cursor: pointer; color: inherit; text-decoration: none;"
                                    onmouseover="this.style.color='blue'; this.style.textDecoration='underline';"
                                    onmouseout="this.style.color='inherit'; this.style.textDecoration='none';"
                                >
                                    ${data}
                                </div>
                            `;
                        }

                        $(document).ready(function () {
                            $('#SearchPeriodId').on('change', function () {
                            var periodId = $(this).val();

                            $.ajax({
                              url: "@(Url.Action("GetPeriodDateRange", "Reports"))",
                                type: 'GET',
                                data: { periodId: periodId },
                                success: function (data) {
                                    if (data.from && data.to) {

                                        // Not custom, auto-fill and hide custom fields
                                        $('#From').val(data.from);
                                        $('#To').val(data.to);
                                        $('#from-container').hide();
                                        $('#to-container').hide();
                                      
                                    } else {
                                        // Custom selected
                                        $('#From').val('');
                                        $('#To').val('');
                                        $('#from-container').show();
                                        $('#to-container').show();
                                      
                                    }
                                }
                            });
                        });
                         $('#SearchPeriodId').trigger('change');
                        });
                    </script>
                <div class="card card-default">
                    <div class="card-body">
                        @{
                            var gridModel = new DataTablesModel
                            {
                                    Name = "timeSheet-grid",
                                    UrlRead = new DataUrl("List", "TimeSheet", null),
                                    SearchButtonId = "search-brands",
                                    Length = Model.PageSize,
                                    LengthMenu = Model.AvailablePageSizes,
                                    Filters = new List<FilterParameter>
                                    {
                                        new FilterParameter(nameof(Model.SelectedEmployeeIds)),
                                        new FilterParameter(nameof(Model.SelectedProjectIds)),
                                        new FilterParameter(nameof(Model.To)),
                                        new FilterParameter(nameof(Model.From)),
                                        new FilterParameter(nameof(Model.TaskName)),
                                        new FilterParameter(nameof(Model.BillableType))
                                    },
                            };

                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(TimeSheetModel.Id))
                            {
                                IsMasterCheckBox = true,
                                Render = new RenderCheckBox("checkbox_timesheet"),
                                ClassName = NopColumnClassDefaults.CenterAll,
                                Width = "30"
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(TimeSheetModel.EmployeeName))
                            {
                                Title = T("Admin.TimeSheet.Fields.EmployeeName").Text
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(TimeSheetModel.ProjectName))
                            {
                                Title = T("Admin.TimeSheet.Fields.ProjectName").Text
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(TimeSheetModel.TaskName))
                            {
                                Title = T("Admin.TimeSheet.Fields.Task").Text,
                                Render = new RenderCustom("renderTaskLink")
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(TimeSheetModel.ActivityName))
                            {
                                Title = T("Admin.TimeSheet.Fields.ActivityName").Text
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(TimeSheetModel.SpentDates))
                            {
                                Title = T("Admin.TimeSheet.Fields.SpentDate").Text
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(TimeSheetModel.EstimatedTimeHHMM))
                            {
                                Title = T("Admin.TimeSheet.Fields.EstimatedHours").Text
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(TimeSheetModel.SpentTime))
                            {
                                Title = T("Admin.TimeSheet.Fields.SpentTime").Text
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(TimeSheetModel.Billable))
                            {
                                Title = T("Admin.TimeSheet.Fields.Billable").Text,
                                Width = "70",
                                ClassName = NopColumnClassDefaults.CenterAll,
                                Render = new RenderBoolean()
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(TimeSheetModel.StartTime))
                            {
                                Title = T("Admin.TimeSheet.Fields.StartTime").Text,
                                Render = new RenderDate()
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(TimeSheetModel.EndTime))
                            {
                                Title = T("Admin.TimeSheet.Fields.EndTime").Text,
                                Render = new RenderDate()
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(TimeSheetModel.IsManualEntry))
                            {
                                Title = T("Admin.TimeSheet.Fields.IsManualEntry").Text,
                                Width = "70",
                                ClassName = NopColumnClassDefaults.CenterAll,
                                Render = new RenderBoolean()
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(TimeSheetModel.CreateOn))
                            {
                                Title = T("Admin.TimeSheet.Fields.CreateOn").Text,
                                Render = new RenderDate()
                            });
                            gridModel.ColumnCollection.Add(new ColumnProperty(nameof(TimeSheetModel.UpdateOn))
                            {
                                Title = T("Admin.TimeSheet.Fields.UpdateOn").Text,
                                Render = new RenderDate()
                            });
                            @if (await permissionService.AuthorizeAsync(StandardPermissionProvider.ManageTimeSheet, PermissionAction.Edit))
                            {
                                gridModel.ColumnCollection.Add(new ColumnProperty(nameof(TimeSheetModel.Id))
                                {
                                    Title = T("Admin.Common.Edit").Text,
                                    Width ="80",
                                    ClassName =  NopColumnClassDefaults.Button,
                                    Render = new RenderButtonEdit(new DataUrl("Edit"))
                                });
                            }
                        }
                        @await Html.PartialAsync("Table", gridModel)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $('#delete-selected-action-confirmation-submit-button').bind('click', function () {
            var postData = {
                selectedIds: selectedIds
            };
            addAntiForgeryToken(postData);
            $.ajax({
                cache: false,
                type: "POST",
                url: "@(Url.Action("DeleteSelected", "TimeSheet"))",
                data: postData,
                error: function (jqXHR, textStatus, errorThrown) {
                    showAlert('deleteSelectedFailed', errorThrown);
                },
                complete: function (jqXHR, textStatus) {
                    if (jqXHR.status === 204) {
                        showAlert('nothingSelectedAlert', '@T("Admin.Common.Alert.NothingSelected")');
                        return;
                    }
                    updateTable('#timeSheet-grid');

                }
            });
            $('#delete-selected-action-confirmation').modal('toggle');
            return false;
        });
    </script>
    <nop-alert asp-alert-id="deleteSelectedFailed" />
    <nop-alert asp-alert-id="nothingSelectedAlert" />
</section>
</form>