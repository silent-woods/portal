@using App.Web.Areas.Admin.Models.Extension.Activities
@model ActivityModel
@{
    const string hideInfoBlockAttributeName = "ActivitiesDetails.HideInfoBlock";
    var customer = await workContext.GetCurrentCustomerAsync();
    var hideInfoBlock = await genericAttributeService.GetAttributeAsync<bool>(customer, hideInfoBlockAttributeName);
}
<input asp-for="Id" type="hidden" />
<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <nop-cards id="activity-item-cards">
                <nop-card asp-name="activity-item-info" asp-icon="fas fa-info" asp-title="@T("Admin.Configuration.Activity.Info")" asp-hide-block-attribute-name="@hideInfoBlockAttributeName" asp-hide="@hideInfoBlock">
                    @await Html.PartialAsync("/Areas/Admin/Views/Extension/Activities/_CreateOrUpdate.Info.cshtml", Model)
                </nop-card>
            </nop-cards>
        </div>
    </div>
</section>