@using App.Web.Areas.Admin.Models.Extension.TaskCategories
@model TaskCategoryModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Configuration.TaskCategory.EditTaskCategoryDetails").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("TaskCategory");
}

<form asp-controller="TaskCategory" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Configuration.TaskCategory.EditTaskCategoryDetails")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Configuration.TaskCategory.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            @if (await permissionService.AuthorizeAsync(StandardPermissionProvider.ManageTaskCategory, PermissionAction.Edit))
            {
                <button type="button" class="btn btn-secondary" id="btnCopyCategory">
                    <i class="fas fa-copy"></i> Copy Task Category
                </button>
                <script>
                    $(document).ready(function () {
                        $("#btnCopyCategory").click(function () {
                            if (!confirm("Are you sure you want to copy this Task Category and its mappings?")) {
                                return;
                            }

                            var postData = { sourceId: @Model.Id };

                            addAntiForgeryToken(postData);

                            $.ajax({
                                url: '@Url.Action("CopyTaskCategory", "TaskCategory")',
                                type: 'POST',
                                data: postData,
                                success: function (response) {
                                    alert("Task Category copied successfully!");
                                    location.reload();
                                },
                                error: function () {
                                    alert("An error occurred while copying.");
                                }
                            });
                        });
                    });
                </script>
                <button type="submit" name="save" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.Save")
                </button>
                <button type="submit" name="save-continue" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.SaveContinue")
                </button>
            }
            @if (await permissionService.AuthorizeAsync(StandardPermissionProvider.ManageTaskCategory, PermissionAction.Delete))
            {
                <span id="taskcategory-delete" class="btn btn-danger">
                    <i class="far fa-trash-alt"></i>
                    @T("Admin.Common.Delete")
                </span>
            }
        </div>
    </div>

    @await Html.PartialAsync("/Areas/Admin/Views/Extension/TaskCategories/_CreateOrUpdate.cshtml", Model)
</form>

<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="taskcategory-delete" />
