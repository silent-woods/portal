@using App.Web.Areas.Admin.Models.Extension.CheckLists
@model CheckListMasterModel

@{
    // page title
    ViewBag.PageTitle = T("Admin.Configuration.CheckListMaster.EditCheckListMasterDetails").Text;
    // active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("CheckListMaster");
}

<form asp-controller="CheckList" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Configuration.CheckListMaster.EditCheckListMasterDetails")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Configuration.CheckListMaster.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            @if (await permissionService.AuthorizeAsync(StandardPermissionProvider.ManageChecklist, PermissionAction.Edit))
            {
                <button type="submit" name="save" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.Save")
                </button>
                <button type="submit" name="save-continue" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.SaveContinue")
                </button>
            }
            @if (await permissionService.AuthorizeAsync(StandardPermissionProvider.ManageChecklist, PermissionAction.Delete))
            {
                <span id="checklistmaster-delete" class="btn btn-danger">
                    <i class="far fa-trash-alt"></i>
                    @T("Admin.Common.Delete")
                </span>
            }
        </div>
    </div>

    @await Html.PartialAsync("/Areas/Admin/Views/Extension/CheckLists/_CreateOrUpdate.cshtml", Model)
</form>

<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="checklistmaster-delete" />
