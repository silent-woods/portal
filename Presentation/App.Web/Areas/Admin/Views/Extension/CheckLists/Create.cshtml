@using App.Web.Areas.Admin.Models.Extension.CheckLists
@model CheckListMasterModel

@{
    // page title
    ViewBag.PageTitle = T("Admin.Configuration.CheckListMaster.AddNew").Text;
    // active menu item
    NopHtml.SetActiveMenuItemSystemName("CheckListMaster");
}

<form asp-controller="CheckList" asp-action="Create" method="post" id="checklistmaster-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Configuration.CheckListMaster.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Configuration.CheckListMaster.BackToList")</a>
            </small>
        </h1>
        @if (await permissionService.AuthorizeAsync(StandardPermissionProvider.ManageChecklist, PermissionAction.Add))
        {
            <div class="float-right">
                <button type="submit" name="save" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.Save")
                </button>
                <button type="submit" name="save-continue" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.SaveContinue")
                </button>
            </div>
        }
    </div>

    @await Html.PartialAsync("/Areas/Admin/Views/Extension/CheckLists/_CreateOrUpdate.cshtml", Model)
</form>
