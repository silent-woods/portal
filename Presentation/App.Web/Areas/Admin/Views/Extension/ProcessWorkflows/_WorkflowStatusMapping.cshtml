@using App.Web.Areas.Admin.Models.Extension.WorkflowStatus

@model WorkflowStatusModel

@if (ViewBag.RefreshPage == true)
{
    <script>
        try {
            // Trigger the custom event in the parent page
            var event = new Event('refreshGrid');
            window.opener.dispatchEvent(event);
            window.close();
        }
        catch (e) {
            console.log("Error triggering event: " + e.message);
        }
    </script>
}
<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                <div class="card card-default card-popup">
                    <div class="card-body">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="CreatedOn" type="hidden" />
                        <input asp-for="ProcessWorkflowId" type="hidden" />

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="StatusName" />
                            </div>
                            <div class="col-md-4">
                                <nop-editor asp-for="StatusName" />
                                <span asp-validation-for="StatusName"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="IsDefaultDeveloperStatus" />
                            </div>
                            <div class="col-md-4">
                                <nop-editor asp-for="IsDefaultDeveloperStatus" />
                                <span asp-validation-for="IsDefaultDeveloperStatus"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="IsDefaultQAStatus" />
                            </div>
                            <div class="col-md-4">
                                <nop-editor asp-for="IsDefaultQAStatus" />
                                <span asp-validation-for="IsDefaultQAStatus"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="ColorCode" />
                            </div>
                        <div class="col-md-1">
                            <input asp-for="ColorCode" type="color" class="form-control" />
                            <span asp-validation-for="ColorCode"></span>
                        </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="DisplayOrder" />
                            </div>
                            <div class="col-md-4">
                                <nop-editor asp-for="DisplayOrder" />
                                <span asp-validation-for="DisplayOrder"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
