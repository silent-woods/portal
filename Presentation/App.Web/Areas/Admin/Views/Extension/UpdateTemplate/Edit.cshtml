@model UpdateTemplateModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.UpdateTemplate.EditUpdateTamplateDetails").Text;
     //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("UpdateTemplate");
}
 

<form asp-controller="UpdateTemplate" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.UpdateTemplate.EditUpdateTamplateDetails") @* - @Model.Name *@
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.UpdateTemplate.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            @if (await permissionService.AuthorizeAsync(SatyanamPermissionProvider.ManageUpdateTemplate, PermissionAction.Edit))
            {
                <button type="submit" name="save" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.Save")
                </button>
                <button type="submit" name="save-continue" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.SaveContinue")
                </button>
                <a class="btn btn-secondary" href="@Url.Action("CopyTemplate", "UpdateTemplate", new { id = Model.Id })" target="_blank" rel="noopener"
                   onclick="return confirm('Are you sure you want to copy this template?');">
                    <i class="fas fa-copy"></i>
                    @T("Admin.UpdateTemplate.CopyTemplate")
                </a>
            }
        </div>
    </div>
    @await Html.PartialAsync("/Areas/Admin/Views/Extension/UpdateTemplate/_CreateOrUpdate.cshtml", Model)
</form>