@model EmployeeModel

<div class="card-body">

    @if (Model.Id > 0)
    {
        <div class="card card-default">
            <div class="card-body">
                @{
                    var gridModel = new DataTablesModel
                    {
                        Name = "experience-grid",
                        UrlRead = new DataUrl("ExperienceList", "Employee", new RouteValueDictionary { [nameof(Model.ExperienceSearchModel.employeeId)] = Model.Id }),
                        UrlDelete = new DataUrl("ExperienceDelete", "Employee", new RouteValueDictionary { [nameof(Model.Id)] = Model.ExperienceModel.FirstOrDefault()?.Id }),
                        Length = Model.ExperienceSearchModel.PageSize,
                        LengthMenu = Model.ExperienceSearchModel.AvailablePageSizes,
                    };

                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(ExperienceModel.EmployeeName))
                    {
                        Title = T("Admin.Experience.Fields.EmployeeName").Text,
                    });
                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(ExperienceModel.PreviousCompanyName))
                    {
                        Title = T("Admin.Experience.Fields.PreviousCompanyName").Text,
                    });
                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(ExperienceModel.Designation))
                    {
                        Title = T("Admin.Experience.Fields.Designation").Text,
                    });
                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(ExperienceModel.Froms))
                    {
                        Title = T("Admin.Experience.Fields.From").Text,
                    });
                    gridModel.ColumnCollection.Add(new ColumnProperty(nameof(ExperienceModel.Tos))
                    {
                        Title = T("Admin.Experience.Fields.To").Text,
                    });
                    @if (await permissionService.AuthorizeAsync(StandardPermissionProvider.ManageExperience, PermissionAction.Edit))
                    {
                        gridModel.ColumnCollection.Add(new ColumnProperty(nameof(ExperienceModel.Id))
                        {
                            Title = T("Admin.Common.Edit").Text,
                            Width = "80",
                            ClassName = NopColumnClassDefaults.Button,
                            Render = new RenderButtonEdit(new DataUrl("~/Admin/Employee/ExperienceEdit?employeeId=" + Model.Id + "&id=" + Model.ExperienceModel.FirstOrDefault()?.Id, true))
                        });
                    }
                    @if (await permissionService.AuthorizeAsync(StandardPermissionProvider.ManageExperience, PermissionAction.Delete))
                    {
                        gridModel.ColumnCollection.Add(new ColumnProperty(nameof(ExperienceModel.Id))
                        {
                            Title = T("Admin.Common.Delete").Text,
                            Width = "100",
                            Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                            ClassName = NopColumnClassDefaults.Button
                        });
                    }
                }
                @await Html.PartialAsync("Table", gridModel)
            </div>
            @if (await permissionService.AuthorizeAsync(StandardPermissionProvider.ManageExperience, PermissionAction.Add))
            {
                <div class="card-body">
                    <button type="button" class="btn btn-primary" onclick="location.href = '@Url.Action("ExperienceCreate", new { employeeId = Model.Id })'">
                        <i class="fas fa-plus-square"></i>
                        @T("Admin.Employee.Experience.AddButton")
                    </button>
                </div>
            }
            
        </div>
    }
    else
    {
        <div class="card card-default">
            <div class="card-body">
                @T("Admin.Employee.Experience.SaveBeforeEdit")
            </div>
        </div>
    }
</div>