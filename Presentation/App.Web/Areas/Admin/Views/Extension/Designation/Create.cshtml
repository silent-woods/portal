@model DesignationModel

@{
    Layout = "_AdminPopupLayout";
}

@if (ViewBag.RefreshPage)
{
    <script>
        try { window.opener.document.forms['@(Context.Request.Query["formId"])'].@(Context.Request.Query["btnId"]).click(); }
        catch (e) { }
        window.close();
    </script>
}
else
{
<form asp-controller="Designation" asp-action="Create" method="post" asp-route-btnId="@Context.Request.Query["btnId"]" 
    asp-route-formId="@Context.Request.Query["formId"]">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Catalog.Designation.AddNew")
        </h1>
        <div class="float-right">
            <button type="submit" id="btnRefreshDesignati" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <div class="content">
        <div class="form-horizontal">
                @await Html.PartialAsync("~/Areas/Admin/Views/Extension/Designation/_CreateOrUpdate.cshtml", Model)
        </div>
    </div>
</form>
}