@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminPopupLayout.cshtml";
}
<div class="screenshot-viewer">
    <div class="task-header">
        <h2 class="task-title">Task: @Model.TaskName</h2>
    </div>
    <div class="task-header">
        <h2 class="task-activity">Activity: @Model.ActivityName</h2>
    </div>

    <div class="task-details">
        <div class="task-info"><strong>Project:</strong> @Model.ProjectName</div>
    </div>

    <div class="screenshot-container">
        <button class="nav-button left-button" onclick="changeScreenshot(-1)">❮</button>
        <img id="screenshotImage" src="" alt="Screenshot">
        <button class="nav-button right-button" onclick="changeScreenshot(1)">❯</button>
    </div>

    <div class="task-stats-container">
        <div class="task-stats"><strong>Mouse Clicks:</strong> <span id="mouseHits">0</span></div>
        <div class="task-stats"><strong>Keyboard Hits:</strong> <span id="keyboardHits">0</span></div>
        <div class="task-stats"><strong>Captured On:</strong> <span id="createdOn"></span></div>
    </div>
</div>

<script>
    let screenshots = @Html.Raw(Json.Serialize(Model.Screenshots));
    let currentIndex = 0;

    function updateScreenshot() {
        if (screenshots.length > 0) {
            let current = screenshots[currentIndex];
            document.getElementById("screenshotImage").src = current.ScreenshotUrl || 'https://via.placeholder.com/800x450?text=No+Image';
            document.getElementById("mouseHits").textContent = current.MouseHits;
            document.getElementById("keyboardHits").textContent = current.KeyboardHits;
            document.getElementById("createdOn").textContent = new Date(current.CreateOnUtc).toLocaleString();
        }
    }

    function changeScreenshot(direction) {
        currentIndex += direction;
        if (currentIndex < 0) {
            currentIndex = screenshots.length - 1;
        } else if (currentIndex >= screenshots.length) {
            currentIndex = 0;
        }
        updateScreenshot();
    }
    // Add event listener for keyboard navigation
    document.addEventListener("keydown", function (event) {
        if (event.key === "ArrowLeft") {
            changeScreenshot(-1);  // Left arrow key moves to previous screenshot
        } else if (event.key === "ArrowRight") {
            changeScreenshot(1);   // Right arrow key moves to next screenshot
        }
    });
    document.addEventListener("DOMContentLoaded", function () {
        updateScreenshot();
    });
</script>

<style>
    .screenshot-viewer {
        max-width: 85%;
        margin: auto;
        font-family: Arial, sans-serif;
        background: #ffffff;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .task-header {
        margin-bottom: 4px;
        padding: 4px;
        text-align: left;
    }

    .task-title, .task-activity {
        font-size: 18px;
        font-weight: bold;
        color: #303030;
        margin: 0;
    }

    .task-details {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        font-size: 14px;
        color: #555;
        margin-top: 8px;
        margin-left:5px;
    }

    .task-info {
        text-align: left;
    }

    .task-stats-container {
        display: flex;
        gap: 12px;
        font-size: 14px;
        margin-top: 5px;
        margin-left: 5px;
    }

    .screenshot-container {
        position: relative;
        width: 800px;
        height: 450px;
      
        border-radius: 6px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px;
        background: #ffffff;
    }

        .screenshot-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 6px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

    .nav-button {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(0, 0, 0, 0.6);
        color: white;
        border: none;
        padding: 8px 14px;
        font-size: 18px;
        cursor: pointer;
        border-radius: 50%;
        transition: 0.3s;
    }

        .nav-button:hover {
            background: rgba(0, 0, 0, 0.8);
        }

    .left-button {
        left: 5px;
    }

    .right-button {
        right: 5px;
    }
</style>

