@using App.Web.Areas.Admin.Models.Extension.ActivityTracking

@model ActivityTrackingSearchModel
@{
    //page title
    ViewBag.PageTitle = T("Admin.Configuration.ActivityTrackingReport").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("ActivityTrackingReport");

    const string hideSearchBlockAttributeName = "ActivityTrackingReport.HideSearchBlock";
    var hideSearchBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideSearchBlockAttributeName);
}
<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Admin.Configuration.ActivityTrackingReport")
    </h1>


</div>
<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                <div class="card card-default card-search">
                    <div class="card-body">
                        <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                            <div class="search-text">@T("Admin.Common.Search")</div>
                            <div class="icon-search"><i class="fas fa-search" aria-hidden="true"></i></div>
                            <div class="icon-collapse"><i class="far fa-angle-@(!hideSearchBlock ? "up" : "down")" aria-hidden="true"></i></div>
                        </div>

                        <div class="search-body @(hideSearchBlock ? "closed" : "")">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <div class="col-sm-3">
                                            <nop-label asp-for="SelectedEmployeeIds" />
                                        </div>
                                        <div class="col-sm-8">
                                            <select id="SelectedEmployeeIds" name="SelectedEmployeeIds" class="kendo-multi-select" style="min-height:30px;" multiple>
                                                @foreach (var project in Model.AvailableEmployees)
                                                {
                                                    <option value="@project.Value">@project.Text</option>
                                                }
                                            </select>
                                           

                                            <script>
                                                $(document).ready(function () {
                                                    var projectSelect = $('#SelectedEmployeeIds').kendoMultiSelect({
                                                        autoClose: true,
                                                        filter: "contains",

                                                    }).data("kendoMultiSelect");

                                                @if (Model.AvailableEmployees.Count == 0)
                                                {
                                                        <text>
                                                                projectSelect.setOptions({
                                                                    enable: false,
                                                                    placeholder: '@T("Admin.Catalog.Products.NoAvailableProjects")'
                                                                });
                                                            projectSelect._placeholder();
                                                            projectSelect._enable();
                                                        </text>
                                                }
                                                                                                                                                                                                                                                                                                                });
                                            </script>

                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                  
                                        <div class="form-group row">
                                            <div class="col-sm-3">
                                                <nop-label asp-for="SearchPeriodId" />
                                            </div>
                                            <div class="col-sm-8">
                                                <nop-select asp-for="SearchPeriodId" asp-items="Model.PeriodList" />
                                                <span asp-validation-for="SearchPeriodId"></span>
                                            </div>
                                        </div>
                                  
                                    <div class="form-group row" style="display:none;" id="from-container">
                                        <div class="col-md-3">
                                            <nop-label asp-for="From" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="From" />

                                            <span id="From-error" class="text-danger" style="display:none;"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row" style="display:none;" id="to-container">
                                        <div class="col-md-3">
                                            <nop-label asp-for="To" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="To" />

                                            <span id="To-error" class="text-danger" style="display:none;"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <script>
                                $(document).ready(function () {
                    
                                    $('#SearchPeriodId').on('change', function () {
                                    var periodId = $(this).val();

                                    $.ajax({
                                      url: "@(Url.Action("GetPeriodDateRange", "Reports"))",
                                        type: 'GET',
                                        data: { periodId: periodId },
                                        success: function (data) {
                                            if (data.from && data.to) {

                                                // Not custom, auto-fill and hide custom fields
                                                $('#From').val(data.from);
                                                $('#To').val(data.to);
                                                $('#from-container').hide();
                                                $('#to-container').hide();
                                              
                                            } else {
                                                // Custom selected
                                                $('#From').val('');
                                                $('#To').val('');
                                                $('#from-container').show();
                                                $('#to-container').show();
                                           
                                            }
                                        }
                                    });
                                });
                                 $('#SearchPeriodId').trigger('change');
                                });
                            </script>

                            <div class="row">
                                <div class="text-center col-12">
                                    <button type="button" id="search-brands" class="btn btn-primary
                                         btn-search">
                                        <i class="fas fa-search"></i>
                                        @T("Admin.Common.Search")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card card-default">
                    <div class="card-body">

                        @await Html.PartialAsync("Table", new DataTablesModel
                        {
                            Name = "projects-grid",
                                                UrlRead = new DataUrl("ActivityTrackingReport", "Reports", null),
                                                SearchButtonId = "search-brands",

                                                Length = Model.PageSize,
                                                LengthMenu = Model.AvailablePageSizes,
                                                Paging = false,
                                                Filters = new List<FilterParameter>
                                                {
                                                new FilterParameter(nameof(Model.From)),
                                                new FilterParameter(nameof(Model.To)),
                                                new FilterParameter(nameof(Model.SelectedEmployeeIds)),
                                                },
                                                ColumnCollection = new List<ColumnProperty>
                                                {
                                                new ColumnProperty(nameof(ActivityTrackingModel.EmployeeName))
                                                {
                                                Title = T("Admin.ActivityTracking.Fields.EmployeeName").Text
                                                },
                                                new ColumnProperty(nameof(ActivityTrackingModel.ActiveDurationHHMM))
                                                {
                                                Title = @"<div class='status-header'><div class='status-dot dot-active'></div><span>Active</span></div>",
                                                Encode = true // Allow HTML
                                                },
                                                new ColumnProperty(nameof(ActivityTrackingModel.AwayDurationHHMM))
                                                {
                                                Title = @"<div class='status-header'><div class='status-dot dot-away'></div><span>Away</span></div>",
                                                Encode = false
                                                },
                                                new ColumnProperty(nameof(ActivityTrackingModel.OfflineDurationHHMM))
                                                {
                                                Title = @"<div class='status-header'><div class='status-dot dot-offline'></div><span>Offline</span></div>",
                                                Encode = false
                                                },
                                                new ColumnProperty(nameof(ActivityTrackingModel.StoppedDurationHHMM))
                                                {
                                                Title = @"<div class='status-header'><div class='status-dot dot-stopped'></div><span>Stopped</span></div>",
                                                Encode = false
                                                },
                                                new ColumnProperty(nameof(ActivityTrackingModel.TotalDurationHHMM))
                                                {
                                                Title = T("Admin.ActivityTracking.Fields.TotalDurationHHMM").Text
                                                },
                                                new ColumnProperty(string.Empty)
                                                {
                                                Render = new RenderCustom("renderSubgridButton"),
                                                Title = "Details"
                                                },
                                                }

                                                })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function renderStatusDot(data, type, row, meta) {
            if (!data) return '';

            const parts = data.split("|||");
            const text = parts[0];
            const color = parts[1] ;

            return `
                <div style="display: flex; align-items: center; gap: 6px;">
                    <div style="width: 12px; height: 12px; border-radius: 50%; background-color: ${color};"></div>
                    <span>${text}</span>
                </div>`;
        }
    </script>
    <script>
              function renderSubgridButton(data, type, row, meta) {
            return `<button type="button" class="btn btn-sm btn-info toggle-subgrid" data-id="${row.EmployeeId}" onclick="loadSubgrid(${row.EmployeeId}, this)">+</button>`;
        }


                    function loadSubgrid(employeeId, btn) {
            const tr = $(btn).closest('tr');
            const subRowId = `subgrid-${employeeId}`;
            const from = $('#From').val();
            const to = $('#To').val();

            if ($(`#${subRowId}`).length) {
                $(`#${subRowId}`).toggle();
                const isVisible = $(`#${subRowId}`).is(":visible");
                $(btn).text(isVisible ? "-" : "+");
                return;
            }

            $('<tr class="no-hover-subgrid" id="' + subRowId + '"><td colspan="100%">Loading...</td></tr>').insertAfter(tr);

            $.get('@Url.Action("GetSubgridActivity", "Reports")', { employeeId, from, to })
                .done(function (html) {
                    $(`#${subRowId}`).html('<td colspan="100%">' + html + '</td>');
                    $(btn).text("-");
                })
                .fail(function () {
                    $(`#${subRowId}`).html('<td colspan="100%">Error loading subgrid</td>');
                });
        }

                     function loadNestedSubgrid(rowId, employeeId, btn) {
            const container = $(`#${rowId}`);
            const parentRow = $(btn).closest('tr');

            const from = parentRow.data('from');
            const to = parentRow.data('to');
            const showBy = parseInt(parentRow.data('showby'));

            if (container.is(':visible')) {
                container.hide();
                $(btn).text('+');
                return;
            }

            let nextShowBy;
            if (showBy === 3) nextShowBy = 2; // Monthly → Weekly
            else if (showBy === 2) nextShowBy = 1; // Weekly → Daily
            else return; // No drill-down beyond daily

            container.show().html('<td colspan="7">Loading...</td>');
            $(btn).text('-');

            $.get('@Url.Action("GetSubgridActivity", "Reports")', {
                employeeId: employeeId,
                from: from,
                to: to,
                showBy: nextShowBy
            })
            .done(function (html) {
                container.html('<td colspan="7">' + html + '</td>');
            })
            .fail(function () {
                container.html('<td colspan="7">Error loading</td>');
            });
        }

                     function loadTimelineSubgrid(childId, employeeId, date, button) {
            const $childRow = $('#' + childId);

            if ($childRow.is(':visible')) {
                $childRow.hide();
                $(button).text('+');
            } else {
                if ($childRow.find('td').is(':empty')) {
                    // Load only if not already loaded
                    $.get('/Admin/Reports/GetDailyTimelineData', { employeeId, date }, function (data) {
                        $childRow.find('td').html(data);
                    });
                }
                $childRow.show();
                $(button).text('-');
            }
        }


    </script>

    <script>
        $('#search-brands').on('click', function (e) {
            const searchDate = $('#SearchDate').val();
            const errorSpan = $('#SearchDate-error');

            if (!searchDate) {
                e.preventDefault(); // prevent form from submitting
                errorSpan.text("Search Date is required.");
                errorSpan.show();
            } else {
                errorSpan.hide();
                // Reload the datatable manually
                $('#projects-grid').DataTable().ajax.reload();
            }
        });
    </script>
    <style>
        tr[id^="subgrid-"]>td {
            background-color: #e9f2fb !important;
        }

        .subgrid-row td {
            border-left: 3px solid #8c8cf1;
        }


        .subgrid-row {
            background-color: #f3f0ff !important; 
        }

            .subgrid-row td {
                padding-top: 2px !important;
                padding-bottom: 2px !important;
                font-size: 15px;
                line-height: 1.3;
            }

        
        .status-header {
            display: flex;
            align-items: center;
            gap: 6px;
            justify-content: left;
        }

        .status-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
        }

        .dot-active {
            background-color: #28a745;
        }
     
        .dot-away {
            background-color: #ffc107;
        }
        
        .dot-offline {
            background-color: #dc3545;
            
        }
       
        .dot-stopped {
            background-color: #808080;
        }
        
   

    </style>
