 @using App.Web.Areas.Admin.Models.Extension.ActivityTracking
@model IList<App.Web.Areas.Admin.Models.Extension.ActivityTracking.ActivityTrackingModel>

<table class="table subgrid-inner-table table-bordered table-striped table-sm mb-0">
    <thead>
        <tr>
            <th>Date</th>
            <th>
                <div style="display: flex; align-items: center; gap: 6px;">
                    <div style="width: 10px; height: 10px; border-radius: 50%; background-color: #28a745;"></div>
                    <span>Active</span>
                </div>
            </th>
            <th>
                <div style="display: flex; align-items: center; gap: 6px;">
                    <div style="width: 10px; height: 10px; border-radius: 50%; background-color: #ffc107;"></div>
                    <span>Away</span>
                </div>
            </th>
            <th>
                <div style="display: flex; align-items: center; gap: 6px;">
                    <div style="width: 10px; height: 10px; border-radius: 50%; background-color: #dc3545;"></div>
                    <span>Offline</span>
                </div>
            </th>
            <th>
                <div style="display: flex; align-items: center; gap: 6px;">
                    <div style="width: 10px; height: 10px; border-radius: 50%; background-color: #808080;"></div>
                    <span>Stopped</span>
                </div>
            </th>
            <th>Total</th>
            <th>Details</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            var childId = $"sub-{item.EmployeeId}-{item.Label.Replace(" ", "").Replace(":", "").Replace("/", "")}";
            var canDrillDown = item.ShowBy != App.Core.Domain.Extension.TimeSheets.ShowByEnum.Daily;

            <tr class="subgrid-row" data-showby="@((int)item.ShowBy)"
                data-from="@item.From.ToString("yyyy-MM-dd")"
                data-to="@item.To.ToString("yyyy-MM-dd")">

                <td>@item.Label</td>
                <td>@item.ActiveDurationHHMM</td>
                <td>@item.AwayDurationHHMM</td>
                <td>@item.OfflineDurationHHMM</td>
                <td>@item.StoppedDurationHHMM</td>
                <td>@item.TotalDurationHHMM</td>
                <td>
                    @if (canDrillDown)
                    {
                        <button class="btn btn-sm btn-info"
                                onclick="loadNestedSubgrid('@childId', @item.EmployeeId, this)">
                            +
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-secondary"
                                onclick="loadTimelineSubgrid('@childId', @item.EmployeeId, '@item.From.ToString("yyyy-MM-dd")', this)">
                            +
                        </button>
                    }
                </td>
            </tr>
            <tr id="@childId" style="display:none"><td colspan="7"></td></tr>
        }
    </tbody>
</table>
<style>
    tr[id^="sub-"]>td {
        background-color: #e9f2fb !important;
    }

    .subgrid-row td {
        border-left: 3px solid #8c8cf1;
    }

    
    .subgrid-row {
        background-color: #f3f0ff !important; 
    }

    .subgrid-row td {
        padding-top: 2px !important;
        padding-bottom: 2px !important;
        font-size: 15px;
        line-height: 1.3;
    }


</style>

<style>
    .subgrid-row:hover td {
        background-color: #dfe9ff !important; 
        cursor: pointer;
    }

    .subgrid-row td {
        padding-top: 4px !important;
        padding-bottom: 4px !important;
        font-size: 14px;
        line-height: 1.3;
        background-color: #f9f9f9;
        border-top: 1px solid #ddd;
        border-bottom: 1px solid #ddd;
    }

    .subgrid-container-row {
        background-color: #eef5ff; 
    }

        .subgrid-container-row td {
            padding: 0;
            border: none;
        }

    .subgrid-inner-table {
        margin-left: 20px;
        width: calc(100% - 20px);
        background-color: white;
        border: 1px solid #ccc;
        box-shadow: 0 0 4px rgba(0, 0, 0, 0.1);
    }

 /*    .no-hover:hover {
        background-color: inherit !important; /* disable hover */
    } */

    .subgrid-label {
        font-weight: bold;
        color: #2a4d8f;
    }
</style>
