@model PermissionUserRecordModel

@{
    ViewBag.PageTitle = T("Admin.Configuration.UserPermissions").Text;
    NopHtml.SetActiveMenuItemSystemName("User Permissions");
}

<form asp-controller="Security" asp-action="AddUserPermission" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Configuration.UserPermissions.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="UserPermissions" asp-controller="Security">@T("Admin.Configuration.UserPermissions.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>