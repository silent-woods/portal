@model PermissionUserRecordModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

@{
    var customer = await workContext.GetCurrentCustomerAsync();

    const string hideInfoBlockAttributeName = "UserPemissionsPage.HideInfoBlock";
    var hideInfoBlock = await genericAttributeService.GetAttributeAsync<bool>(customer, hideInfoBlockAttributeName);
}

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <nop-cards id="user-permissions-cards">
                <nop-card asp-name="user-permissions-info" asp-icon="fas fa-info" asp-title="@T("Admin.Configuration.UserPermissions.Info")" asp-hide-block-attribute-name="@hideInfoBlockAttributeName" asp-hide="@hideInfoBlock" asp-advanced="false">
                    @await Html.PartialAsync("_CreateOrUpdate.Info", Model)
                </nop-card>
            </nop-cards>
        </div>
    </div>
</section>