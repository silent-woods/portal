@model LeaveSettingsModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="SendEmailToAllProjectLeaders_OverrideForStore" asp-input="SendEmailToAllProjectLeaders" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
