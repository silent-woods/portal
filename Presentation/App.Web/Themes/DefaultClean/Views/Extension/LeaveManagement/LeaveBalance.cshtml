    }

    .btn-search {
        padding: 8px 25px;
        border-radius: 10px;
    }

    .select2 {
        min-width: 47%;
        height: 40px;
        padding: 6px;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
        border: 1px solid #ddd;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }
 
</style>















