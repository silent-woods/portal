@{
    Layout = "_ColumnsOne";
    NopHtml.AddTitleParts("Submit Update");
    NopHtml.AppendPageCssClassParts("html-account-page");
    NopHtml.AppendPageCssClassParts("html-update-form-page");
}
<style>
    body {
        background-color: #f8f9fa;
    }
    .card-box {
        border: 1px solid #ddd;
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 24px;
