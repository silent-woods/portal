    }
    .question-label {
        font-weight: 600;
        font-size: 17px;
        margin-bottom: 8px;
        display: block;
        color: #333;
    }
    .question-hint {
        font-size: 13px;
        color: #888;
        margin-bottom: 10px;
    }
    .form-control,
    select {
        height: 40px;
        padding: 6px 12px;
        font-size: 15px;
        border-radius: 8px;
        box-shadow: none;
        border: 1px solid #ced4da;
    }
    .form-check {
