    textarea.form-control {
        resize: vertical;
    }
    .container mt-4 {
        padding-bottom: 10px;
        padding-top: 10px;
    }
    .period-sidebar {
        width: 220px;
        padding-top: 49px;
    }
    .sidebar-title {
        margin-bottom: 15px;
