<div class="header header--fullbleed"
     style="position:relative; left:50%; right:50%; margin-left:-50vw; margin-right:-50vw; width:100vw; margin-bottom:20px; border-bottom:1px solid #eee;">
    @await Component.InvokeAsync(typeof(WidgetViewComponent), new { widgetZone = PublicWidgetZones.HeaderBefore })

    <div class="header-upper"
         style="display:flex; justify-content:space-between; align-items:center; padding:6px 24px; gap:24px; flex-wrap:wrap;">

        <div class="header-logo" style="display:flex; align-items:center; padding:0 10px; margin:0 ;">
            @await Component.InvokeAsync(typeof(LogoViewComponent))
        </div>

        <div class="header-right" style="display:flex; align-items:center; gap:20px; margin-left:auto;">
            <div class="header-selectors-wrapper" style="display:flex; align-items:center; gap:10px;">
                @await Component.InvokeAsync(typeof(LanguageSelectorViewComponent))
                @await Component.InvokeAsync(typeof(WidgetViewComponent), new { widgetZone = PublicWidgetZones.HeaderSelectors })
            </div>

            <div class="header-links-wrapper" style="display:flex; align-items:center;">
                @await Component.InvokeAsync(typeof(HeaderLinksViewComponent))
            </div>
        </div>
    </div>
</div>

<style>
    
    .header-logo img {
        display: block;
        max-height: 40px; 
        height: auto;
        margin: auto 0;
    }

    @@media (max-width: 768px) {
        .header--fullbleed .header-upper {
            flex-direction: column !important;
            align-items: center !important;
            gap: 10px !important;
        }

        .header--fullbleed .header-right {
            margin-left: 0 !important;
            justify-content: center !important;
            flex-wrap: wrap;
        }

        .header--fullbleed .header-logo {
            justify-content: center !important;
        }
    }
</style>
